@model List<Course>

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="text-center text-primary"> Course List</h1>
        </div>
    </div>
    @if (User.IsInRole("Admin")||User.IsInRole("Instructor"))
    {
        <td class="text-center">
            <a asp-action="Create"
               asp-controller="Course">
                Create <i class="bi bi-arrow-right-short"></i>
            </a>
        </td>
                            }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Degree</th>
                    <th>MinDegree</th>
             
                    <th>Actions</th>
                @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
                {
                    <th>Actions</th>
                    <th>Actions</th>
                            }
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @if (Model.Any())
                {
                    @foreach (var crs in Model)
                    {
                        <tr>

                            <td class="text-center">@crs.Name</td>

                            <td>@crs.Description</td>

                            <td>@crs.Degree</td>

                            <td>@crs.MinDegree</td>



                            <td class="text-center">
                                <a asp-action="Details"
                                   asp-controller="Course"
                                   asp-route-id="@crs.Num">
                                    Details <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
                        {
                                <td class="text-center">
                                    <a asp-action="Edit"
                                       asp-controller="Course"
                                       asp-route-id="@crs.Num">
                                        Edit <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                                <td class="text-center bg-danger">
                                    <a asp-action="Delete"
                                       asp-controller="Course"
                                       asp-route-id="@crs.Num">
                                        Delete <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                            }
                           
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-danger py-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> No courses found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>