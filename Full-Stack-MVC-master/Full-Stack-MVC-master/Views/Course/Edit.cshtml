@model Course

<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h3>Edit Course</h3>
            <p class="blue-text">Fill the form below to register a new Course</p>

            <div class="card p-4">
                <h5 class="text-center mb-4">Course Information</h5>

                <form asp-action="Edit" asp-controller="Course" method="post" class="form-card">
                    <input asp-for="Num" hidden></input>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label class="form-control-label px-3" asp-for="Name">Name<span class="text-danger"> *</span></label>
                            <input class="form-control" asp-for="Name" placeholder="Enter Course name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label class="form-control-label px-3" asp-for="Description">Description<span class="text-danger"> *</span></label>
                            <input class="form-control" asp-for="Description" placeholder="Enter Description" />
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                    </div>

                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-12 flex-column d-flex">
                            <label class="form-control-label px-3" asp-for="Degree">Degree<span class="text-danger"> *</span></label>
                            <input class="form-control" asp-for="Degree" placeholder="Enter Degree" />
                            <span class="text-danger" asp-validation-for="Degree"></span>
                        </div>
                    </div>

                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-12 flex-column d-flex">
                            <label class="form-control-label px-3" asp-for="MinDegree">MinDegree<span class="text-danger"> *</span></label>
                            <input class="form-control" asp-for="MinDegree" placeholder="Enter MinDegree" />
                            <span class="text-danger" asp-validation-for="MinDegree"></span>
                        </div>
                    </div>



                    <hr class="my-4" />


                    <div class="row justify-content-end mt-4">
                        <div class="form-group col-sm-6">
                            <button type="submit" class="btn  btn-info">Edit Course</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
