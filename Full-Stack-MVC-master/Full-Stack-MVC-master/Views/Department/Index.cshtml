@model List<Department>

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="text-center text-primary"> department List</h1>
        </div>
        @if (User.IsInRole("Admin")||User.IsInRole("Instructor"))
        {
            <td class="text-center btn btn-info">
                <a asp-action="Create"
               asp-controller="Department">
                Create <i class="bi bi-arrow-right-short"></i>
            </a>
        </td>}
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Manager</th>
                    <th>Location</th>
                    <th>Courses Enrolled</th>
                    <th>Actions</th>
                    <th>Actions</th>
                    @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
                    {
                    <th>Actions</th>
                    <th>Actions</th>
                            }
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @if (Model.Any())
                {
                    @foreach (var dept in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                 
                                    <strong>@dept.Name</strong>
                                </div>
                            </td>

                            <td class="text-center">@dept.Manager</td>

                            <td>@dept.Location</td>


                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var course in dept.DeptCourse)
                                    {
                                        <span class="badge bg-info text-dark fw-normal">@course.Course.Name</span>
                                    }
                                    @if (dept.DeptCourse.Count > 3)
                                    {
                                        <span class="badge bg-secondary text-white opacity-75" title="@(dept.DeptCourse.Count - 3) more courses">
                                            +@(dept.DeptCourse.Count - 3)
                                        </span>
                                    }
                                </div>
                            </td>

                            <td class="text-center">
                                <a asp-action="Details"
                                   asp-controller="Department"
                                   asp-route-id="@dept.Id">
                                    Details <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-action="DetailsVM"
                                   asp-controller="Department"
                                   asp-route-id="@dept.Id">
                                    DetailsVM <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </td>
                            @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
                            {
                                <td class="text-center">
                                    <a asp-action="Edit"
                                    asp-controller="Department"
                                    asp-route-id="@dept.Id">
                                        Edit <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                                <td class="text-center bg-danger">
                                    <a asp-action="Delete"
                                    asp-controller="Department"
                                    asp-route-id="@dept.Id">
                                        Delete <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-danger py-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> No departments found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>