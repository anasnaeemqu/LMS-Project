@model Department
@{
    SelectList Departments = new SelectList(ViewBag.Courses, "Id", "Name");
}

<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h3>Create Department</h3>
            <p class="blue-text">Fill the form below to register a new Department</p>

            <div class="card p-4">
                <h5 class="text-center mb-4">Department Information</h5>

                <form asp-action="Create" asp-controller="Department" method="post" class="form-card">

                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label class="form-control-label px-3" asp-for="Name">Name<span class="text-danger"> *</span></label>
                            <input class="form-control" asp-for="Name" placeholder="Enter Department name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label class="form-control-label px-3" asp-for="Manager">Manager<span class="text-danger"> *</span></label>
                            <input class="form-control" asp-for="Manager" placeholder="Enter Manager" />
                            <span class="text-danger" asp-validation-for="Manager"></span>
                        </div>
                    </div>

                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-12 flex-column d-flex">
                            <label class="form-control-label px-3" asp-for="Location">Location<span class="text-danger"> *</span></label>
                            <input class="form-control" asp-for="Location" placeholder="Enter Location" />
                            <span class="text-danger" asp-validation-for="Location"></span>
                        </div>
                    </div>

                    <div class="row justify-content-between text-left">
                        <table>
                            <tbody>
                                @foreach (var c in ViewBag.Courses)
                                {
                                    <tr>
                                        <td class="form-floating form-control-color">

                                            <input type="checkbox" name="SelectedCourseIds" class="form-check-input" value="@c.Num" id="Course_@c.Num" />
                                            <label for="Course_@c.Num" class="ms-2 form-check-label">@c.Name</label>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
               
                    </div>



                    <hr class="my-4" />


                    <div class="row justify-content-end mt-4">
                        <div class="form-group col-sm-6">
                            <button type="submit" class="btn btn-block btn-primary">Create Department</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> 
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script> 
