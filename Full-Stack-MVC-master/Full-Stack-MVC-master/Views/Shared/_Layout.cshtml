    <title>Full Width Pics - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <link href="~/css/_Layout.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#!">Welcome @User.Identity.Name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-action="Dashboard" asp-controller="Admin">Admin Dashboard</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Student">Student</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Course">Course</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Department">Department</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Instructor">Instructor</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-action="AddRole" asp-controller="Role">Add Role</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" asp-action="SignOut" asp-controller="Account">SignOut</a></li>

                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-action="Register" asp-controller="Account">Register</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Login" asp-controller="Account">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Login" asp-controller="Admin">Admin Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="#!">Contact</a></li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <!-- Image element - set the background image for the header in the line below-->
