@model List<Instructor>

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="text-center text-primary"> Instructor List</h1>
        </div>
         @if (User.IsInRole("Admin"))
                            {
        <td class="text-center btn btn-info">
            <a asp-action="Create"
               asp-controller="Instructor">
                Create <i class="bi bi-arrow-right-short"></i>
            </a>
        </td>
                            }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Salary</th>
                    <th>Department</th>
                    <th>Courses Enrolled</th>
                    <th>Actions</th>
                    <th>Actions</th>
                            @if (User.IsInRole("Admin"))
                            {
                    <th>Actions</th>
                    <th>Actions</th>
                            }
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @if (Model.Any())
                {
                    @foreach (var ins in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                   
                                    <strong>@ins.Name</strong>
                                </div>
                            </td>

                            <td class="text-center">@ins.Age</td>

                            <td>@ins.Salary</td>

                            <td>@ins.Department.Name</td>

                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var course in ins.InstructorCourses)
                                    {
                                        <span class="badge bg-info text-dark fw-normal">@course.Course.Name</span>
                                    }
                                    @if (ins.InstructorCourses.Count > 3)
                                    {
                                        <span class="badge bg-secondary text-white opacity-75" title="@(ins.InstructorCourses.Count - 3) more courses">
                                            +@(ins.InstructorCourses.Count - 3)
                                        </span>
                                    }
                                </div>
                            </td>

                            <td class="text-center">
                                <a asp-action="Details"
                                   asp-controller="Instructor"
                                   asp-route-id="@ins.Id">
                                    Details <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-action="DetailsVM"
                                   asp-controller="Instructor"
                                   asp-route-id="@ins.Id">
                                    DetailsVM <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </td>
        @if (User.IsInRole("Admin"))
                            {
                                <td class="text-center">
                                    <a asp-action="Edit"
                                    asp-controller="Instructor"
                                    asp-route-id="@ins.Id">
                                        Edit <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                                <td class="text-center bg-danger">
                                    <a asp-action="Delete"
                                    asp-controller="Instructor"
                                    asp-route-id="@ins.Id">
                                        Delete <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-danger py-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> No Instructor records are currently available.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>