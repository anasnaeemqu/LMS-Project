@model IEnumerable<mvcLab.Models.Submission>

@{
    ViewData["Title"] = "Submissions";
}

<div class="container mt-4">
    <h2>Submissions for Assignment</h2>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Submitted Date</th>
                <th>Content</th>
                <th>Grade</th>
                <th>Feedback</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.SubmissionDate</td>
                    <td>@item.SubmissionContent</td>
                    <td>@(item.Grade.HasValue ? item.Grade.Value.ToString() : "Not Graded")</td>
                    <td>@item.Feedback</td>
                    <td>
                        <a asp-action="GradeSubmission" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Grade</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
     <div class="mt-3">
        <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
    </div>
</div>
