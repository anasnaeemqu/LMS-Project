@model mvcLab.Models.Teacher

@{
    ViewData["Title"] = "Setup Profile";
}

<div class="container mt-4">
    <h2>Setup Teacher Profile</h2>
    <hr />
    <form asp-action="SetupProfile">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Full Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Bio" class="form-label">Bio / Introduction</label>
            <textarea asp-for="Bio" class="form-control"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Profile</button>
    </form>
</div>
