@model mvcLab.Models.Submission

@{
    ViewData["Title"] = "Grade Submission";
}

<div class="container mt-4">
    <h2>Grade Submission</h2>
    <p><strong>Student Content:</strong> @Model.SubmissionContent</p>
    <p class="text-muted">Submitted on: @Model.SubmissionDate</p>

    <hr />
    <form asp-action="GradeSubmission">
        <input type="hidden" asp-for="Id" />
        
        <div class="mb-3">
            <label asp-for="Grade" class="form-label">Grade</label>
            <input asp-for="Grade" class="form-control" type="number" step="0.1" />
        </div>

        <div class="mb-3">
            <label asp-for="Feedback" class="form-label">Feedback</label>
            <textarea asp-for="Feedback" class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit Grade</button>
        <a asp-action="ViewSubmissions" asp-route-assignmentId="@Model.AssignmentId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
