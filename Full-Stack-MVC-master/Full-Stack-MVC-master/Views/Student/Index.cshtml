@model List<Student>

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="text-center text-primary"> Student List</h1>
        </div>
         @if (User.IsInRole("Admin"))
                            {
        <td class="text-center btn btn-info">
            <a asp-action="Create"
               asp-controller="Student"
              >
                Create <i class="bi bi-arrow-right-short"></i>
            </a>
        </td>
                            }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Department</th>
                    <th>Courses Enrolled</th>
                    <th>Actions</th>
                    <th>Actions</th>
                            @if (User.IsInRole("Admin"))
                            {
                    <th>Actions</th>
                    <th>Actions</th>
                            }
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @if (Model.Any())
                {
                    @foreach (var stud in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(stud.Image))
                                    {
                                        <img src="@stud.Image" alt="Avatar" class="rounded-circle me-2 shadow-sm" style="width: 35px; height: 35px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-circle me-2 text-secondary fs-5"></i>
                                    }
                                    <strong>@stud.Name</strong>
                                </div>
                            </td>

                            <td class="text-center">@stud.Age</td>

                            <td>@stud.Gender</td>

                            <td>@stud.Department.Name</td>

                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var course in stud.StudCourses)
                                    {
                                        <span class="badge bg-info text-dark fw-normal">@course.Course.Name</span>
                                    }
                                    @if (stud.StudCourses.Count > 3)
                                    {
                                        <span class="badge bg-secondary text-white opacity-75" title="@(stud.StudCourses.Count - 3) more courses">
                                            +@(stud.StudCourses.Count - 3)
                                        </span>
                                    }
                                </div>
                            </td>

                            <td class="text-center">
                                <a asp-action="Details"
                                   asp-controller="Student"
                                   asp-route-id="@stud.SSN">
                                    Details <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-action="DetailsVM"
                                   asp-controller="Student"
                                   asp-route-id="@stud.SSN">
                                    DetailsVM <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </td>
        @if (User.IsInRole("Admin"))
                            {
                                <td class="text-center">
                                    <a asp-action="Edit"
                                    asp-controller="Student"
                                    asp-route-id="@stud.SSN"
                                    >
                                        Edit <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                                <td class="text-center bg-danger">
                                    <a asp-action="Delete"
                                    asp-controller="Student"
                                    asp-route-id="@stud.SSN"
                                    >
                                        Delete <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-danger py-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> No student records are currently available.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>