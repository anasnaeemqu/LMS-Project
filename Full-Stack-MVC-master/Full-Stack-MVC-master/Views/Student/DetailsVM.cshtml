@using mvcLab.ViewModels
@model DeptVM

@{
    ViewData["Title"] = $"{Model.Name}'s Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">


                <div class="card-header bg-primary text-white p-4">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2 class="mb-0">@Model.Name</h2>

                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row">

                        <div class="col-lg-6 border-end pb-3 pb-lg-0 pe-lg-4">
                            <h4 class="text-info mb-3"><i class="bi bi-info-circle me-2"></i>Data</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Age:</dt>
                                <dd class="col-sm-8">@Model.Age</dd>


                                <dt class="col-sm-4">Department:</dt>
                                <dd class="col-sm-8">@Model.DeptName</dd>

                            </dl>
                        </div>


                        <div class="col-lg-6 pt-3 pt-lg-0 ps-lg-4">
                            <h4 class="text-success mb-3"><i class="bi bi-book-fill me-2"></i>Registered Courses (@Model.StudCourse.Count)</h4>
                            @if (Model.StudCourse.Any())
                            {
                                <ul class="list-group list-group-flush">                               
                                    @foreach (var studCourse in Model.StudCourse)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>@studCourse.CourseName</span>
                                            <a class="badge bg-primary text-dark rounded-pill" asp-action="EditStudCourse" asp-controller="Student" asp-route-studentId="@studCourse.StudentId" asp-route-courseId="@studCourse.CourseId"><i class="bi bi-pen-fill"></i>Edit</a>

                                            <span>min:@studCourse.minDegree</span><span style=" color: @studCourse.Color;">Grade: @(studCourse.Grade)</span><span>max:@studCourse.maxDegree</span>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="alert alert-warning small" role="alert">
                                    No courses currently enrolled.
                                </div>
                            }
                        </div>
                    </div>
                </div>


                <div class="card-footer bg-light d-flex justify-content-end">
                    <a asp-action="Index" asp-controller="Student" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left-short"></i> Back to List
                    </a>
                     @if (User.IsInRole("Admin"))
                            {
                        <button type="button" class="btn btn-outline-primary" asp-action="Edit" asp-controller="Student">
                        <i class="bi bi-pencil-square me-1"></i> Edit Record
                    </button>
                            }
                </div>
            </div>
        </div>
    </div>
</div>