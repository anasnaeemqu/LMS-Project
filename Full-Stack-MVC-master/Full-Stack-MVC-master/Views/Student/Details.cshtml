@model Student

@{
    ViewData["Title"] = $"{Model.Name}'s Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">

              
                <div class="card-header bg-primary text-white p-4">
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Model.Image" alt="Profile Picture" class="rounded-circle me-3 border border-white" style="width: 80px; height: 80px; object-fit: cover;">
                        }
                        else
                        {
                            <i class="bi bi-person-circle display-4 me-3"></i>
                        }
                        <div>
                            <h2 class="mb-0">@Model.Name</h2>
                            
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row">
                    
                        <div class="col-lg-6 border-end pb-3 pb-lg-0 pe-lg-4">
                            <h4 class="text-info mb-3"><i class="bi bi-info-circle me-2"></i>Data</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Age:</dt>
                                <dd class="col-sm-8">@Model.Age</dd>

                                <dt class="col-sm-4">Gender:</dt>
                                <dd class="col-sm-8">@Model.Gender</dd>

                                <dt class="col-sm-4">Department:</dt>
                                <dd class="col-sm-8">@Model.Department.Name</dd>

                                <dt class="col-sm-4">Address:</dt>
                                <dd class="col-sm-8">@Model.Address</dd>
                            </dl>
                        </div>

                      
                        <div class="col-lg-6 pt-3 pt-lg-0 ps-lg-4">
                            <h4 class="text-success mb-3"><i class="bi bi-book-fill me-2"></i>Registered Courses (@Model.StudCourses.Count)</h4>

                            @if (Model.StudCourses.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var studCourse in Model.StudCourses)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>@studCourse.Course.Name</span>
                                            <span class="badge bg-warning text-dark rounded-pill">Grade: @(studCourse.Grade )</span>
                                            <a class="badge bg-primary text-white rounded-pill p-2 text-decoration-none"
                                               asp-action="EditStudCourse"
                                               asp-controller="Student"
                                               asp-route-studentId="@Model.SSN"
                                               asp-route-courseId="@studCourse.CourseId">
                                                <i class="bi bi-pencil-fill me-1"></i> Edit Grade
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="alert alert-warning small" role="alert">
                                    No courses currently enrolled.
                                </div>
                            }
                        </div>
                    </div>
                </div>

             
                <div class="card-footer bg-light d-flex justify-content-end">
                    <a asp-action="Index" asp-controller="Student" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left-short"></i> Back to List
                    </a>
                   @if (User.IsInRole("Admin"))
                            {
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Student" asp-route-id="@Model.SSN">
                            <i class="bi bi-pencil-square me-1"></i> Edit Record
                        </a>
                            }
                </div>
            </div>
        </div>
    </div>
</div>